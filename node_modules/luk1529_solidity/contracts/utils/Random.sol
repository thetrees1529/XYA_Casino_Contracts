pragma solidity ^0.8.0;
contract Random {
  uint nonce;
  function _randomNumber(uint _upTo) internal returns(uint number) {
      bytes memory salt = _getSalt();
      uint res = uint(sha256(abi.encodePacked(nonce, salt)));
      number = res % _upTo;
      nonce ++;
  }
  function _getSalt() internal virtual returns(bytes memory) {
      return "";
  }
}